{
    "info": {
        "name": "Drokpa Core Flows",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:4000/api/v1"
        },
        {
            "key": "accessToken",
            "value": ""
        },
        {
            "key": "refreshToken",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Request OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/request-otp",
                        "body": {
                            "mode": "raw",
                            "raw": "{ \"email\": \"user@example.com\" }"
                        }
                    }
                },
                {
                    "name": "Sign Up",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/sign-up",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Passw0rd!\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
                        }
                    }
                },
                {
                    "name": "Verify OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/verify-otp",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"user@example.com\",\n  \"otpString\": \"000000\"\n}"
                        }
                    }
                },
                {
                    "name": "Sign In",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/sign-in",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
                        }
                    }
                },
                {
                    "name": "Refresh Token",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/auth/refresh-token",
                        "header": [
                            {
                                "key": "Cookie",
                                "value": "refreshToken={{refreshToken}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "PUT",
                        "url": "{{base_url}}/auth/logout",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ]
                    }
                },
                {
                    "name": "Forgot Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/forgot-password",
                        "body": {
                            "mode": "raw",
                            "raw": "{ \"email\": \"user@example.com\" }"
                        }
                    }
                },
                {
                    "name": "Reset Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/auth/reset-password",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"token\": \"<reset-token-from-email>\",\n  \"password\": \"NewPassw0rd!\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Onboarding (Admin + Provider)",
            "item": [
                {
                    "name": "Create Onboarding Invite (ADMIN)",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/onboarding/invite",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"providerType\": [\"HOMESTAY_HOST\", \"VEHICLE_PARTNER\"],\n  \"email\": \"host@example.com\"\n}"
                        }
                    }
                },
                {
                    "name": "Get Onboarding By Token",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/onboarding/<token>"
                    }
                },
                {
                    "name": "Complete Onboarding (Provider)",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/onboarding/complete",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"token\": \"<invite-token>\",\n  \"metadata\": {\n    \"businessName\": \"Mountain Homestays\",\n    \"gst\": \"\",\n    \"address\": \"\"\n  }\n}"
                        }
                    }
                },
                {
                    "name": "List Pending Onboardings (ADMIN)",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/onboarding/pending",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Homestay (Provider HOST)",
            "item": [
                {
                    "name": "Create Homestay",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/homestay",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Alpine Nest\",\n  \"description\": \"Cozy rooms with mountain view\",\n  \"imageUrls\": [\"https://s3/.../room1.jpg\"],\n  \"amenities\": [\"wifi\", \"parking\"],\n  \"isActive\": true,\n  \"addressId\": \"<address-id>\",\n  \"rooms\": []\n}"
                        }
                    }
                },
                {
                    "name": "List Homestays",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/homestay",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "urlEncoded": [
                            {
                                "key": "isActive",
                                "value": "true"
                            },
                            {
                                "key": "providerId",
                                "value": ""
                            }
                        ]
                    }
                },
                {
                    "name": "Get Homestay By ID",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/homestay/<homestayId>"
                    }
                },
                {
                    "name": "Update Homestay",
                    "request": {
                        "method": "PUT",
                        "url": "{{base_url}}/homestay/<homestayId>",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{ \"description\": \"Updated description\" }"
                        }
                    }
                },
                {
                    "name": "Get My Homestays (Provider)",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/homestay/provider/my-homestays",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Vehicle (Provider VENDOR)",
            "item": [
                {
                    "name": "Create Vehicle",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/vehicle",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Toyota Innova\",\n  \"type\": \"SUV\",\n  \"brand\": \"Toyota\",\n  \"model\": \"Innova Crysta\",\n  \"registrationNo\": \"ABC-1234\",\n  \"imageUrls\": [\"https://s3/.../vehicle1.jpg\"],\n  \"basePricePerDay\": 3500,\n  \"bookingMode\": [\"WITH_DRIVER\"],\n  \"isActive\": true,\n  \"addressId\": \"<address-id>\"\n}"
                        }
                    }
                },
                {
                    "name": "List Vehicles",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/vehicle",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "urlEncoded": [
                            {
                                "key": "type",
                                "value": "SUV"
                            },
                            {
                                "key": "isActive",
                                "value": "true"
                            },
                            {
                                "key": "providerId",
                                "value": ""
                            }
                        ]
                    }
                },
                {
                    "name": "Get Vehicle By ID",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/vehicle/<vehicleId>"
                    }
                },
                {
                    "name": "Update Vehicle",
                    "request": {
                        "method": "PUT",
                        "url": "{{base_url}}/vehicle/<vehicleId>",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{ \"isActive\": true }"
                        }
                    }
                },
                {
                    "name": "Delete Vehicle",
                    "request": {
                        "method": "DELETE",
                        "url": "{{base_url}}/vehicle/<vehicleId>",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get My Vehicles (Provider)",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/vehicle/provider/my-vehicles",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}